					font_name: "Poppins-Regular.ttf"
					

				MDLabel:
					id: transactionHistory10
					text: ""
					font_size: "13sp"
					font_name: "Poppins-Regular.ttf"


		MDFloatLayout:
			pos_hint: {"center_x": .5, "center_y": .1}
			size_hint_y: .001
			md_bg_color: 120/255, 120/255, 120/255, 1

		MDTextButton:
			text: "BACK"
			font_size: "17sp"
			font_name: "Poppins-Regular.ttf"
			pos_hint: {"center_x": .15, "center_y": .05}
			halign: "left"
			#color: 226/255, 0, 48/255, 1
			on_release:
				root.manager.transition.direction = "right"
				root.manager.current = "account"

		MDIconButton:
			theme_text_color: "Custom"
			text_color: 1, 1, 1, 1
			user_font_size: "48sp"
			pos_hint: {"center_x": .9, "center_y": .05}
			on_release: app.displayTransactionHistory(gridLayout, transactionHistory1, transactionHistory2, transactionHistory3, transactionHistory4, transactionHistory5, transactionHistory6, transactionHistory7, transactionHistory8, transactionHistory9, transactionHistory10)
			Image:
				source:"refresh.png"
				size_hint: 1.5, 1.5


